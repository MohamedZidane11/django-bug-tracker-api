# Django Settings
SECRET_KEY=your-super-secret-django-key-here
DEBUG=False
DJANGO_LOG_LEVEL=INFO

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_JSON={"type": "service_account", "project_id": "your-project-id", ...}

# Database (Railway will provide this automatically)
DATABASE_URL=postgresql://user:password@host:port/database

# CORS Settings
ALLOWED_ORIGINS=https://your-frontend-domain.com

# CSRF trusted origins (should match your deployment domains)
CSRF_TRUSTED_ORIGINS=https://bug-tracker-frontend.vercel.app,https://your-app-name.up.railway.app,https://yourdomain.com
# =============================================================================
# Allow credentials in CORS requests
CORS_ALLOW_CREDENTIALS=True

# SECURITY SETTINGS (Production)
# =============================================================================
# Force HTTPS redirects
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True